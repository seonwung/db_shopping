<h1>로그인</h1>

<% if (error) { %>
  <div class="error"><%= error %></div>
<% } %>

<form method="post" action="/auth/login">
  <div>
    <label>이메일</label>
    <input type="email" name="email" value="<%= form.email || '' %>" required />
  </div>
  <div>
    <label>비밀번호</label>
    <input type="password" name="password" required />
  </div>
  <button type="submit">로그인</button>
</form>
